<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeacondLife" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightblue</item>
        <item name="colorSecondaryVariant">@color/navy</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.appbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="popupMenuBackground">@color/darkblue</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Theme.appbar2" parent="Theme.appbar">
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorOnPrimary">@color/darkblue</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:statusBarColor">@color/darkblue</item>
        <item name="popupMenuBackground">@color/darkblue</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Spinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.SeacondLife.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="botbar">
        <item name="colorSurface">@color/darkblue</item>
        <item name="colorPrimary">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="backgroundColor">@color/darkblue</item>
        <item name="background">@color/darkblue</item>
    </style>

    <style name="Theme.SeacondLife.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SeacondLife.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>